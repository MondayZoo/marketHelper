<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d_100"
    android:layout_height="@dimen/d_100"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="@dimen/d_12"
    app:cardCornerRadius="@dimen/d_06"
    android:layout_marginBottom="@dimen/d_10">

    <TextView
        android:id="@+id/icon_tv"
        android:layout_width="@dimen/d_48"
        android:layout_height="@dimen/d_48"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_timer" />

    <TextView
        android:id="@+id/func_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_52"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/s_16"
        tools:text="计时器"/>

</androidx.cardview.widget.CardView>