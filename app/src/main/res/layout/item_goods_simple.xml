<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d_150"
    android:layout_height="@dimen/d_180"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/d_10"
    android:layout_marginTop="@dimen/d_06"
    android:elevation="@dimen/d_04">

    <ImageView
        android:id="@+id/goods_pic_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_120"
        android:layout_margin="@dimen/d_10"/>

    <TextView
        android:id="@+id/goods_name_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/d_04"
        android:layout_marginTop="@dimen/d_130"
        android:textColor="@color/black"
        android:textSize="@dimen/s_14"
        android:ellipsize="end"
        android:maxLines="2"
        android:gravity="center"
        tools:text="康师傅红烧牛肉面优惠装"/>

</androidx.cardview.widget.CardView>