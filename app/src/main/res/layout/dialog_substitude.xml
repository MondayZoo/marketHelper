<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d_200"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ui_shape_top_corner_16dp_white"
    android:padding="@dimen/d_10">

    <ImageView
        android:id="@+id/left_iv"
        android:layout_width="@dimen/d_60"
        android:layout_height="@dimen/d_60"
        tools:src="@drawable/pic_cat"/>

    <ImageView
        android:id="@+id/mid_iv"
        android:layout_width="@dimen/d_60"
        android:layout_height="@dimen/d_60"
        android:layout_toEndOf="@id/left_iv"/>

    <ImageView
        android:id="@+id/right_iv"
        android:layout_width="@dimen/d_60"
        android:layout_height="@dimen/d_60"
        android:layout_alignParentEnd="true"
        tools:src="@drawable/pic_shopping_bag"/>

    <TextView
        android:id="@+id/left_tv"
        android:layout_width="@dimen/d_60"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_iv"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="招财猫"/>

    <TextView
        android:id="@+id/right_tv"
        android:layout_width="@dimen/d_60"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/right_iv"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="购物袋"/>

    <TextView
        android:id="@+id/tips_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_tv"
        android:layout_marginTop="@dimen/d_10"
        android:layout_marginBottom="@dimen/d_10"
        android:textColor="@color/black"
        android:text="确定使用左侧商品临时代替右侧商品？"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tips_tv"
        android:paddingVertical="@dimen/d_10"
        android:paddingHorizontal="@dimen/d_25"
        android:background="@drawable/ui_shape_corner_8dp_white_with_grey_border"
        android:text="确定"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tips_tv"
        android:layout_alignParentEnd="true"
        android:paddingVertical="@dimen/d_10"
        android:paddingHorizontal="@dimen/d_25"
        android:background="@drawable/ui_shape_corner_8dp_white_with_grey_border"
        android:text="取消"/>

</RelativeLayout>